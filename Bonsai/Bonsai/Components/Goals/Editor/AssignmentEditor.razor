@using Bonsai.Persistence
@using Microsoft.EntityFrameworkCore
@inject UnitOfWork unitOfWork;

<EditForm id="AssignmentGoalCreateForm" OnSubmit="@CreateAsync" Model="@Goal">
	<InputText @bind-Value="Goal!.Title" />
	<InputTextArea @bind-Value="Goal!.Description" />
	<InputDate Type="InputDateType.DateTimeLocal" min="@DateTime.Today.ToString("dd-MM-yyyy")" @bind-Value="Goal!.Deadline" />
	<InputDate Type="InputDateType.DateTimeLocal" min="@DateTime.Today.ToString("dd-MM-yyyy")" @bind-Value="Goal!.CommencementTime" />
	<button type="submit">Create</button>
</EditForm>

